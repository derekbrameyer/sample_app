<h1>Editing post</h1>

<% form_for([@user, @post]) do |f| %>
	<% f.error_messages %>
	
	<p>
		<%= f.label :poster %><br />
		<%= f.text_field :poster %>
	</p>
	<p>
		<%= f.label :body %><br />
		<%= f.text_area :body %>
	</p>
	<p>
		<%= f.submit "Update" %>
	</p>
<% end %>

<%= link_to 'Show', user_post_path(@user, @post) %> | 
<%= link_to 'Back', user_posts_path(@user) %>
